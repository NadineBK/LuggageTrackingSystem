			return false;
		}
  	}
  	
  	before constructor {
	    if (aAirline == null || aAirline.length() == 0) {
	    	throw new RuntimeException("The airline cannot be empty.");
	    }
	}
	before setAirline{
		if (aAirline == null || aAirline.length() == 0) {
			return false;
		}
  	}
  	
  	before constructor {
	    if (aNumber == null || aNumber.length() == 0) {
